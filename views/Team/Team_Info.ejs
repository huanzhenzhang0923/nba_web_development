<%- include('../includes/head.ejs') %>
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>

            <main>
                <h1>Team Info</h1>
                <% if (teams.length > 0) { %>
                    <div class="grid">
                        <% for (let team of teams) { %>
                            <h2><%= team.Team %></h2>
                            <section class="nba-player-index__trending-item small-4 medium-3 large-2 team-atl-hawks">
                                <a href="http://localhost:3000/Team/<%=team.Team%>">
                                    <div class="nba-player-index__image_wrapper">
                                        <div class="nba-player-index__image">
                                            <div class="nba-player-index__headshot_wrapper  ">
                                                <img class=" lazyloaded" data-src= <%= team.URL %> onerror="this.onerror=null;window.sil(this)" src= <%= team.URL %> >
                                            </div>
                                        </div>
                                    </div>
                                </a>
                                <p class="nba-player-index__name"><%= 'Rank:' %><%= team.Rank %></p>
                            </section>
                            <% } %>
                    </div>
                <% } else { %>
                    <h1>No result Found!</h1>
                <% } %>
            </main>
            <%- include('../includes/end.ejs') %>
